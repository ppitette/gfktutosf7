{% extends 'admin/admin.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.new') }}">Ajouter une recette</a>
    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(recipes, 'Id', 'r.id') }}</th>
                <th>{{ knp_pagination_sortable(recipes, 'Titre', 'r.title') }}</th>
                <th>Catégorie</th>
                <th style='width: 200px'>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>{{ recipe.id }}</td>
                    <td>
                        <a href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">{{ recipe.title }}</a>
                    </td>
                    <td>{{ recipe.category.name | default('') }}</td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-primary btn-sm" href="{{ path('admin.recipe.edit', {id: recipe.id}) }}">Éditer</a>
                            {# Pour le champ caché ajouter 'http_method_override: true' dans config/packages/framework.yaml #}
                            <form action="{{ path('admin.recipe.delete', {id: recipe.id}) }}" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {{ knp_pagination_render(recipes) }}
    {# Avec le Paginator de Doctrine
    <div class="d-flex">
        {% if page > 1 %}
            <a href="{{ path('admin.recipe.index', {page: page - 1}) }}" class="btn btn-secondary">Page précédente</a>
        {% endif %}
        {% if page < maxPage %}
            <a href="{{ path('admin.recipe.index', {page: page + 1}) }}" class="btn btn-secondary">Page suivante</a>
        {% endif %}
    </div> #}
{% endblock %}
